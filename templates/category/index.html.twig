{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
    <div class="row my-4">
        <div class="col">
            <h1 class="mb-4">{{ category.name }}</h1>
            <div class="row">
                {% for product in category.products %}
                <div class="col-sm-4 mb-5">
                    <div class="row">
                        <div class="col-sm-4">
                            <img src="{{ asset('uploads/pictures/' ~ product.picture) }}" class="img-fluid" alt="">
                        </div>
                        <div class="col-sm-8">
                            <h3>{{ product.name }}</h3>
                            <p class="h5 my-2">{{ product.price }}â‚¬</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <p class="my-1">{{ product.content }}</p>
                            <p>
                                <a href="{{ path('product_show', {slug: category.slug, slugProduct: product.slugProduct}) }}"
                                   class="btn btn-primary">
                                    <span class="fas fa-eye"></span>
                                    Consult
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
